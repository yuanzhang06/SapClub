<mvc:View controllerName="com.sap.controller.Register" xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" displayBlock="true">
	<Page title="Register" showNavButton="true" navButtonPress="onNavBack">
		<content>
			<l:Grid class="sapUiSmallMarginTop" hSpacing="2">
				<l:content>
					<Label text="First Name:" width="100%" textAlign="Begin">
						<layoutData>
							<l:GridData linebreak="true"
								span="L2 M2 S12" />
						</layoutData>
					</Label>
					<Input id="FirstnameInput" textAlign="Left" 
							width="100%" type="Text" 
							valueLiveUpdate="true"
							valueStateText="Name must not be empty."
							placeholder="Enter Your Name ..." 
							value="{
								path : 'INFO>/name',
								type : 'sap.ui.model.type.String',
								constraints : {
									minLength: 1,
									maxLength: 20
								}}">
						<layoutData>
							<l:GridData linebreakS="true" span="L10 M10 S12" />
						</layoutData>
					</Input>
					<Label text="Last Name:" width="100%" textAlign="Begin">
						<layoutData>
							<l:GridData linebreak="true" span="L2 M2 S12"/>
						</layoutData>
					</Label>
					<Input id="LastNameInput" textAlign="Left" 
							width="100%" type="Text" 
							placeholder="Enter your Last Name ..."
							valueLiveUpdate="true"
							valueStateText="last name must not be empty."
							>
						<layoutData>
							<l:GridData linebreakS="true" span="L10 M10 S12" />
						</layoutData>
					</Input>
						<Label text="age:" width="100%" textAlign="Begin">
						<layoutData>
							<l:GridData linebreak="true" span="L2 M2 S12"/>
						</layoutData>
					</Label>
					<Input id="ageInput" textAlign="Left" 
							width="100%" type="Text" 
							placeholder="Enter age ..."
							valueLiveUpdate="true"
							valueStateText="age must not be empty."
							>
						<layoutData>
							<l:GridData linebreakS="true" span="L10 M10 S12" />
						</layoutData>
					</Input>
					<Label text="e-mail:" width="100%" textAlign="Begin">
						<layoutData>
							<l:GridData linebreak="true" span="L2 M2 S12"/>
						</layoutData>
					</Label>
					<Input id="mailInput" textAlign="Left" 
							width="100%" type="Text" 
							placeholder="Enter age ..."
							valueLiveUpdate="true"
							valueStateText="mail must not be empty."
							>
						<layoutData>
							<l:GridData linebreakS="true" span="L10 M10 S12" />
						</layoutData>
					</Input>
					<Label text="user Name:" width="100%" textAlign="Begin">
						<layoutData>
							<l:GridData linebreak="true" span="L2 M2 S12"/>
						</layoutData>
					</Label>
					<Input id="nameInput" textAlign="Left" 
							width="100%" type="Text" 
							placeholder="Enter userName ..."
							valueLiveUpdate="true"
							valueStateText="UserName must not be empty."
							>
						<layoutData>
							<l:GridData linebreakS="true" span="L10 M10 S12" />
						</layoutData>
					</Input>
					<Label text="password:" width="100%" textAlign="Begin">
						<layoutData>
							<l:GridData linebreak="true" span="L2 M2 S12"/>
						</layoutData>
					</Label>
					<Input id="pswInput" textAlign="Left" 
							width="100%" type="Password" 
							placeholder="Enter psw ..."
							valueLiveUpdate="true"
							valueStateText="psw must not be empty."
							>
						<layoutData>
							<l:GridData linebreakS="true" span="L10 M10 S12" />
						</layoutData>
					</Input>
					<Button text="confirm" width="100%" type="Emphasized" press="onOpenDialog">
						<layoutData>
							<l:GridData linebreak="true" span="L12 M12 S12"/>
						</layoutData>
					</Button>
					
				</l:content>
			</l:Grid>
		</content>
	</Page>
</mvc:View>